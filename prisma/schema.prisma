datasource db {
  provider = "postgresql"
}

generator client {
  provider   = "prisma-client"
  output     = "../generated/prisma"
  engineType = "client"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  image         String?
  email         String?   @unique
  emailVerified DateTime?
  accounts      Account[]
  sessions      Session[]

  // Tracking Data Sync Status
  lastSyncAt          DateTime @default(now())
  totalTracksAnalyzed Int      @default(0)

  // Relationship to historical data
  historicalTracks Track[]
  topTracks        TopTrack[]
  topArtists       TopArtist[]
  trackFeatures    TrackFeatures[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Track {
  trackId        Int      @id @default(autoincrement())
  spotifyTrackId String // Spotify's unique identifier for the track
  title          String
  artist         String
  albumImageUrl  String?
  playedAt       DateTime // Crucial: When the track was played

  // Relationship back to the User who played it
  user   User   @relation(fields: [userId], references: [id])
  userId String

  // Ensures we only store one record for a track played at a specific time by a user
  @@unique([spotifyTrackId, playedAt])
}

model Account {
  id                String  @id @default(cuid())
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text // This is where Spotify's Refresh Token will be stored
  access_token      String? @db.Text // This is where Spotify's Access Token will be stored
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model TopTrack {
  id             String  @id @default(cuid())
  spotifyTrackId String
  title          String
  artist         String
  albumImageUrl  String?
  rank           Int // Ranking position (1st, 2nd, etc.)
  popularity     Int? // Spotify popularity score 0-100

  // Full track info from Spotify API
  trackInfo   Json? // Complete track object with album, artists, external_urls, etc.
  artistGenre String[]

  // Relationship to user
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  // Ensure one record per user per track
  @@unique([userId, spotifyTrackId])
  @@index([userId])
  @@index([rank])
}

model TrackFeatures {
  id               String   @id @default(cuid())
  spotifyTrackId   String   @unique
  danceability     Float
  energy           Float
  instrumentalness Float
  liveness         Float
  loudness         Float
  speechiness      Float
  valence          Float
  artistGenre      String[]
  title            String
  artist           String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  @@index([spotifyTrackId])
}

model TopArtist {
  id              String   @id @default(cuid())
  spotifyArtistId String
  name            String
  genres          String[] // Array of genre strings
  popularity      Int? // Spotify popularity score 0-100
  imageUrl        String? // Artist image URL
  rank            Int // Ranking position (1st, 2nd, etc.)

  // Relationship to user
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  // Ensure one record per user per artist
  @@unique([userId, spotifyArtistId])
  @@index([userId])
  @@index([rank])
}
